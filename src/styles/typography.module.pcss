.default {
  @apply text-type;

  :global(.dark) & {
    @apply text-type-dark;
  }
}

.h1 {
  @apply font-extrabold;
  @apply text-3xl;
  @apply sm:text-xl;
  @apply md:text-2xl;
  @apply lg:text-3xl;
  @apply xl:text-4xl;
  @apply 2xl:text-5xl;
}

.h2 {
  @apply font-bold;
  @apply text-2xl;
  @apply sm:text-lg;
  @apply md:text-xl;
  @apply lg:text-2xl;
  @apply xl:text-3xl;
  @apply 2xl:text-4xl;
}

.h3 {
  @apply font-normal;
  @apply text-xl;
  @apply sm:text-base;
  @apply md:text-lg;
  @apply lg:text-xl;
  @apply xl:text-2xl;
  @apply 2xl:text-3xl;
}
.h4 {
  @apply font-bold;
  @apply text-lg;
  @apply sm:text-sm;
  @apply md:text-base;
  @apply lg:text-lg;
  @apply xl:text-xl;
  @apply 2xl:text-2xl;
}

.leader {
  @apply opacity-70;
  @apply font-light;
  @apply italic;
  @apply text-base;
  @apply sm:text-sm;
  @apply md:text-lg;
}

.prose-wrapper {
  @apply prose prose-stone;
  @apply prose-base;
  @apply sm:prose-xs;
  @apply md:prose-sm lg:prose-base xl:prose-lg 2xl:prose-xl;

  :global(.dark) & {
    @apply prose-invert;
  }
}

.body {
  @apply text-base;
  @apply sm:text-xs;
  @apply md:text-sm;
  @apply lg:text-base;
  @apply xl:text-lg;
  @apply 2xl:text-xl;
}

.link,
.externalLink {
  @apply text-sky-500 no-underline hover:underline;
}

.externalLink {
}
