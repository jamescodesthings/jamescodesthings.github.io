.heading-with-icon {
  @apply flex flex-row justify-start items-center;

  svg,
  i {
    @apply w-6 sm:w-8 md:w-10;
    @apply text-primary fill-primary shrink-0 align-middle;
  }

  i {
    @apply text-[1.5rem] sm:text-[2rem] md:text-[2.5rem];
  }
}

.sidebar-title {
  @apply text-primary;
}

.sidebar-body {
  @apply font-normal;
}
