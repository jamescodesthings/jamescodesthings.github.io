.badge {
  @apply bg-light;
  @apply whitespace-nowrap;
  @apply align-middle;
  @apply inline-block;
  @apply px-1 py-px leading-4;
  @apply rounded-full;
  @apply text-xs;

  :global(.dark) & {
    @apply bg-light-dark;
  }
  @apply sm:px-2 sm:text-sm;

  .badge-inner {
    @apply flex items-center;
  }

  .icon {
    @apply inline-block h-3 w-3 mr-1;
    @apply sm:h-4 sm:h-4;
    svg {
      @apply h-full w-full;
    }
    img {
      @apply inline-block;
      @apply align-[revert];
    }
  }
  .text {
    @apply text-center;
  }
}
