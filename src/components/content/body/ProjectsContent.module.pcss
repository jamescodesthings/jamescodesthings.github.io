.projects-wrapper {
  @apply flex flex-col;
}

.entry {
  @apply flex flex-row;
}

.left {
  @apply flex flex-col items-center;
  @apply w-1/6;
}

.timeline {
  @apply w-px bg-stone-700 flex-1 print:!bg-stone-700;
  /*  .last & {
    @apply bg-transparent  print:!bg-transparent;
  }*/
}
.timeline-circle {
  @apply w-1 h-1 rounded-full border border-tertiary;

  &.last {
    @apply mb-3;
  }
  &.first {
    @apply mt-3;
  }

  .last &.last {
    @apply w-4 h-4 relative;
    @apply before:content-['â€¦'];
    @apply before:absolute before:-top-px before:-left-px before:h-4 before:w-4 before:text-center before:text-xs before:text-tertiary;
  }
}

.right {
  @apply flex-1;
}

.can-hide {
  @apply hidden;
}

/* Tech Wrapper */
.row {
  @apply flex justify-between items-center;
}

.tech-wrapper {
  @apply flex flex-row flex-wrap max-h-7 overflow-hidden;
  @apply md:max-h-8;
}

.badge-wrapper {
  @apply mr-2 mb-2;
}
