.skill-group {
  @apply flex flex-row flex-wrap border-b-2 last:border-b-0;
  @apply border-b-type;
  :global(.dark) & {
    @apply border-b-type-dark;
  }
}

.skill {
  @apply flex flex-col items-center w-24 my-6 shrink-0 justify-between;

  img,
  svg {
    @apply w-6 mb-2 block;
  }

  h5 {
    @apply text-center text-xs font-light;
  }
}
