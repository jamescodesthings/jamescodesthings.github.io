@import '/node_modules/devicon/devicon.min.css';

@page {
  margin: 0 !important;
  /* A4 Paper size in CM */
  width: 21cm;
  height: 29.7cm;
}

@media print {
  html,
  body,
  .root {
    height: 100%;
  }
}

body {
  &.dark {
    @apply bg-type;
    @apply print:bg-transparent;
  }
  &.light {
    @apply bg-type-dark;
    @apply print:bg-transparent;
  }
}
